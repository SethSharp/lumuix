{
  "include": ["src/**/*.ts", "src/types.d.ts", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "./dist/**/*",
    "node_modules"
  ]
}
